{% macro renderMessage(message) %} {% if message %}
<div data-target=".twg-message-wrapper" class="twg-message-open-btn twg-flex twg-gap-12px twg-items-center twg-cursor-pointer">
  <div class="twg-relative twg-size-50px twg-overflow-hidden">
    <img
      src="../../../assets/images/{{ message.image }}"
      class="twg-size-full"
      alt="{{ message.sender }}"
    />
    {% if message.isOnline %}
    <div
      class="twg-size-12px twg-rounded-full twg-bg-success-500 twg-border-3 twg-border-accent-100 twg-absolute twg-right-0px twg-bottom-3px"
    ></div>
    {% endif %}
  </div>
  <div class="twg-flex-1 twg-flex twg-justify-between twg-gap-2">
    <div>
      <h4
        class="lg:twg-text-16px max-lg:twg-text-14px twg-font-bold twg-text-dark-100"
      >
        {{ message.sender }}
      </h4>
      {% if message.isVoiceMessage %}
      <p
        class="lg:twg-text-13px max-lg:twg-text-12px twg-text-light-500 twg-flex twg-gap-1 twg-items-center"
      >
        <!-- <i class="fa-solid fa-microphone"></i> -->
