            clip-rule="evenodd"
            d="M7.08276 8.29167V3.33333C7.08276 2.55093 6.4485 1.91667 5.6661 1.91667C4.88369 1.91667 4.24943 2.55093 4.24943 3.33333V8.29167C4.24943 9.07407 4.88369 9.70833 5.6661 9.70833C6.4485 9.70833 7.08276 9.07407 7.08276 8.29167ZM5.6661 0.5C4.10129 0.5 2.83276 1.76853 2.83276 3.33333V8.29167C2.83276 9.85647 4.10129 11.125 5.6661 11.125C7.2309 11.125 8.49943 9.85647 8.49943 8.29167V3.33333C8.49943 1.76853 7.2309 0.5 5.6661 0.5Z"
